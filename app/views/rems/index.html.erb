<p id="notice"><%= notice %></p>

<h1>Cut Rems</h1>
<%= link_to 'New Rem', new_rem_path, :class => "btn btn-primary" %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date Cut</th>
      <th>Description</th>
      <th>Material Thick</th>
      <th>Alloy</th>
      <th>Square Inches</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rems.each do |rem| %>
      <tr>
        <td><%= rem.date.strftime("%m/%d/%Y") %></td>
        <td><%= rem.desc %></td>
        <td><%= rem.matThick %></td>
        <td><%= rem.alloy %></td>
        <td><%= rem.sqin %></td>
        <td><%= link_to 'Show', rem, :class => "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_rem_path(rem), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', rem, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


