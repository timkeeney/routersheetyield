<p id="notice"><%= notice %></p>

<h1>Listing Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Sheeth</th>
      <th>Sheetw</th>
      <th>Matthick</th>
      <th>Desc</th>
      <th>Alloy</th>
      <th>Ponum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= sheet.date %></td>
        <td><%= sheet.sheetH %></td>
        <td><%= sheet.sheetW %></td>
        <td><%= sheet.matThick %></td>
        <td><%= sheet.desc %></td>
        <td><%= sheet.alloy %></td>
        <td><%= sheet.poNum %></td>
        <td><%= link_to 'Show', sheet %></td>
        <td><%= link_to 'Edit', edit_sheet_path(sheet) %></td>
        <td><%= link_to 'Destroy', sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

