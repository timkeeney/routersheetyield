<p id="notice"><%= notice %></p>

<h1>Cut Sheets</h1>
<%= link_to 'New Sheet', new_sheet_path, :class => "btn btn-primary" %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>Sheet Height</th>
      <th>Sheet Width</th>
      <th>Material Thick</th>
      <th>Description</th>
      <th>Alloy</th>
      <th>PO Number</th>
      <th>% Scrap</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= sheet.date.strftime("%m/%d/%Y") %></td>
        <td><%= sheet.sheetH %></td>
        <td><%= sheet.sheetW %></td>
        <td><%= sheet.matThick %></td>
        <td><%= sheet.desc %></td>
        <td><%= sheet.alloy %></td>
        <td><%= sheet.poNum %></td>
        <td><%= sheet.scrap %></td>
        <td><%= link_to 'Show', sheet, :class => "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_sheet_path(sheet), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', sheet, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>




