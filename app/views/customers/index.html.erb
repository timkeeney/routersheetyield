<p id="notice"><%= notice %></p>

<h1>Listing Customers</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.fname %></td>
        <td><%= customer.lname %></td>
        <td><%= customer.email %></td>
        <td><%= customer.address %></td>
        <td><%= link_to 'Show', customer, :class => "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

