<p id="notice"><%= notice %></p>

<h1>Boats</h1>
<%= link_to 'New Boat', new_boat_path, :class => "btn btn-primary" %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Hull Type</th>
      <th>Length</th>
      <th>Start Date</th>
      <th>Complete Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat.customer.fname %> <%= boat.customer.lname %></td>
        <td><%= boat.HullType %></td>
        <td><%= boat.length %></td>
        <td><%= boat.StartDate %></td>
        <td><%= boat.CompleteDate %></td>
        <td><%= link_to 'Show', boat, :class => "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_boat_path(boat), :class => "btn btn-success" %></td>
        <td><%= link_to 'Destroy', boat, method: :delete, :class => "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

